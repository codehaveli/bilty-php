{
    "name": "codehaveli/bitly-php",
    "description": "Bitly PHP SDK",
    "keywords": [
        "bilty", "php", "shorturl", "sdk"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Codehaveli",
            "email": "codehaveli@gmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "~6.0"
    },
    "autoload": {
        "psr-4": {
            "Codehaveli\\": "src/"
        }
    },
    "require-dev": {
        "overtrue/phplint": "^2.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "minimum-stability": "dev",
    "scripts": {
        "lint"   : "phplint --no-cache src/",
        "phpcs"  : "phpcs  --standard=psr12 src/",
        "phpcbf" : "phpcbf  --standard=psr12 src/"
    }
}
